<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="group_service_order_template" model="res.groups">
        <field name="name">Order Templates</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_discount_per_service_line" model="res.groups">
        <field name="name">Discount on Service lines</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_service_pricelist" model="res.groups">
        <field name="name">Advanced Pricelists (Services)</field>
        <field name="category_id" ref="base.module_category_hidden"/>
        <field name="implied_ids" eval="[(4, ref('product.group_product_pricelist'))]"/>
    </record>

    <record id="group_uom" model="res.groups">
        <field name="name">Manage Multiple Units of Measure (Services)</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_stock_packaging" model="res.groups">
        <field name="name">Manage Product Packaging (Services)</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <data noupdate="1">
        <record id="service_order_template_rule_company" model="ir.rule">
            <field name="name">Order Template multi-company</field>
            <field name="model_id" ref="model_service_order_template"/>
            <field name="domain_force">[('company_id', 'in', company_ids + [False])]</field>
        </record>
    </data>
</odoo>
