<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="equipment_tree_view" model="ir.ui.view">
        <field name="name">equipment.tree.view</field>
        <field name="model">equipment.equipment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="serial" />
                <field name="year" />
                <field name="manufacturer" />
                <field name="model" />
                <field name="sub_model" />
            </tree>
        </field>
    </record>

    <record id="equipment_form_view" model="ir.ui.view">
        <field name="name">equipment.form.view</field>
        <field name="model">equipment.equipment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="serial" />
                        <field name="year" />
                        <field name="manufacturer" />
                        <field name="model" />
                        <field name="sub_model" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_equipments" model="ir.actions.act_window">
        <field name="name">Equipments</field>
        <field name="res_model">equipment.equipment</field>
        <field name="view_mode">tree,form</field>
    </record>

</odoo>