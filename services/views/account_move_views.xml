<?xml version="1.0"?>
<odoo>
    <data>
        <record id="view_move_form_inherit_services" model="ir.ui.view">
            <field name="name">account.move.form.inherit.services</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='partner_id']" position="before">
                    <field name="billing_customer"/>
                </xpath>   
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button class="oe_stat_button"
                        name="action_view_source_service_orders"
                        type="object"
                        icon="fa-pencil-square-o"
                        invisible="service_order_count == 0 or move_type not in ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt')">
                        <field string="Service Orders" name="service_order_count" widget="statinfo"/>
                    </button>
                    <button name="open_attachments"
                        class="oe_stat_button"
                        icon="fa-pencil-square"
                        type="object">
                        <div class="o_stat_info">
                            <span class="o_stat_text">Attachments</span>
                        </div>
                    </button>
                </xpath>
                <xpath expr="//page[@name='other_info']" position="inside">
                    <group string="Service Info" name="service_info">
                        <field name="equipment_name" />
                        <field name="equipment_serial"/>
                        <field name="partner_shipping_id"
                            context="{'default_type':'delivery', 'show_address': False, 'show_vat': False}"/>
                        <field name="customer_complaint"/>
                        <field name="date_damage"/>
                        <field name="complaint_number"/>
                        <field name="warranty_number"/>
                        <field name="pre_payment"/>
                    </group>
                </xpath>    
            </field>
        </record>
    </data>
</odoo>